  "nodemonConfig": {
    "ignore": [
      ".next",
      "data",
      "pages",
      "lib",
      "components"
    ],
    "legacyWatch": true
  },
  "xo": {
    "extends": [
      "xo-react"
    ],
    "space": true,
    "overrides": [
      {
        "files": "models/*.js",
        "rules": {
          "unicorn/filename-case": [
            "error",
            {
              "case": "pascalCase"
            }
          ]
        }
      }
    ]
  },
  "eslint": {
    "settings": {
      "react": {
        "version": "16.5"
      }
    }
  },
  "lint-staged": {
    "*.{js}": [
      "npx xo --fix",
      "git add"
    ]
  }
