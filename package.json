    "development": [
      "last 1 chrome version",
      "last 1 firefox version"
    ]
  },
  "xo": {
    "extends": [
      "xo-react"
    ],
    "space": true,
    "prettier": true,
    "parser": "babel-eslint",
    "overrides": [
      {
        "files": "components/**/*.js",
        "envs": [
          "browser"
        ]
      },
      {
        "files": "models/*.js",
        "rules": {
          "unicorn/filename-case": [
            "error",
            {
              "case": "pascalCase"
            }
          ]
        }
      }
    ]
  },
  "eslint": {
    "settings": {
      "react": {
        "version": "16.7"
      }
    }
  },
  "lint-staged": {
    "*.{js}": [
      "npx xo --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
